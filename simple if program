
//simple if program :
//PROGRAM NUMBER: 1. Even or Odd program using scanner class
package com.acitivites;

import java.util.Scanner;

public class EvenOrOdd {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		System.out.println("enter the number: ");
		int number = sc.nextInt();
		if(number%2==0){
			System.out.println(number+" is EVEN-------!");
		}
		else {
			System.out.println(number+" is ODD--------!");
		}
		sc.close();
        }
}

//OUTPUT: 
/*        enter the number: 
          25
          25 is ODD--------!  
          enter the number: 
          100
          100 is EVEN-------!        */




//PROGRAM NUMBER: 2. Check if a charector is Vowel
package com.acitivites;

import java.util.Scanner;

public class Vowels {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		System.out.println("enter a charecter: ");
		char ch=sc.next().charAt(0);
		if(ch=='a' || ch=='e'|| ch=='i'|| ch=='o' || ch=='u'||
				ch=='A' || ch=='B'|| ch=='C'|| ch=='O'||ch=='U') {
			System.out.println("Charector "+ch+" is vowel." );
		}
		else {
			System.out.println(ch+ "-is not a vowel!!");
		}
	}
}

//OUTPUT:
/*       enter a charecter: 
         a
         Charector a is vowel.
         enter a charecter: 
         B
         B-is not a vowel!!        */

//PROGRAM NUMBER:3 Bteween 10 and 20 number
package com.acitivites;

import java.util.Scanner;

public class Betweennumber {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		System.out.println("enter the number: ");
		int num=sc.nextInt();
		if(num>=10 && num<=20)
		{
			System.out.println("the number is between 10 amd twenty");
		}
		else {
			System.out.println("the number is other!!!!");
		}
	}
}
//OUTPUT:
?*      enter the number: 
        12
        the number is between 10 amd twenty
        enter the number: 
        12
        the number is between 10 amd twenty        */

